pipeline {
    agent any

    tools {
        maven 'maven 3.8.2'  // This must match the name in Jenkins > Global Tool Configuration
    }

    stages {
        stage('1-Clone') {
            steps {
                git credentialsId: 'GitHUB-CREDENTIALS', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('2-Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('3-CodeQuality') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }
    }
}





