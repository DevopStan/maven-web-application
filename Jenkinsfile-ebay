pipeline {
    agent any

    tools {
        maven 'maven_3.8.2' // Name exactly as defined in Jenkins
    }

    stages {
        stage('1-Clone') {
            steps {
                git credentialsId: 'GitHUB-CREDENTIALS', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('2-mavenBuild') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('3-CodeQuality') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }
    }
}



