pipeline {
    agent any

    tools {
        maven 'maven 3.8.2'  // Use the same name as you set in Global Tool Configuration
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Code Quality') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }
    }
}




