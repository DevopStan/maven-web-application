pipeline {
    agent any

    tools {
        maven 'Maven_3.8.6'  // Match the name you gave in Global Tool Configuration
    }

    stages {
        stage('Clone') {
            steps {
                git credentialsId: 'GitHub-Credentials', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Code Quality') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }
    }
}





