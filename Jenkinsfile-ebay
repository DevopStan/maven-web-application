pipeline {
    agent any

    environment {
        MAVEN_HOME = '/opt/maven'  // Path to Maven home
        PATH = "${MAVEN_HOME}/bin:${env.PATH}"  // Add Maven bin directory to PATH
    }

    stages {
        stage('1-Clone') {
            steps {
                git credentialsId: 'GitHUB-CREDENTIALS', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('2-mavenBuild') {
            steps {
                script {
                    sh "${MAVEN_HOME}/bin/mvn clean package"
                }
            }
        }

        stage('3-CodeQuality') {
            steps {
                script {
                    sh "${MAVEN_HOME}/bin/mvn sonar:sonar"
                }
            }
        }
    }
}





