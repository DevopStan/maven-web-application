def mavenHome = '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/maven_3.9.9'

pipeline {
    agent any

    environment {
        MAVEN_HOME = "${mavenHome}"
        PATH = "${mavenHome}/bin:${env.PATH}"  // Add Maven to PATH
    }

    stages {
        stage('1-Clone') {
            steps {
                git credentialsId: 'GitHUB-CREDENTIALS', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('2-mavenBuild') {
            steps {
                sh "${MAVEN_HOME}/bin/mvn clean package"
            }
        }

        stage('3-CodeQuality') {
            steps {
                sh "${MAVEN_HOME}/bin/mvn sonar:sonar"
            }
        }
    }
}

