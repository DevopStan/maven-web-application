def mavenHome = '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/maven_3.9.9'  // Adjust to the correct version

pipeline {
    agent any

    environment {
        MAVEN_HOME = "${mavenHome}"  // Quoted properly
        PATH = "${mavenHome}/bin:${env.PATH}"
    }

    stages {
        stage('1-Clone') {
            steps {
                git credentialsId: 'GitHUB-CREDENTIALS', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('2-mavenBuild') {
            steps {
                script {
                    sh "${mavenHome}/bin/mvn clean package"
                }
            }
        }

        stage('3-CodeQuality') {
            steps {
                script {
                    sh "${mavenHome}/bin/mvn sonar:sonar"
                }
            }
        }
    }
}

