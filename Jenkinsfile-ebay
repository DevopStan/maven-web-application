pipeline {
    agent any

    environment {
        MAVEN_HOME = '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/maven_3.9.9'
        PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('1-Clone') {
            steps {
                git credentialsId: 'GitHUB-CREDENTIALS', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('2-mavenBuild') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('3-CodeQuality') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }
    }
}
