pipeline {
    agent any

    tools {
        maven 'maven 3.8.2'  // This should match the name from Jenkins -> Global Tool Configuration
    }

    environment {
        PATH = "${tool 'maven 3.8.2'}/bin:${env.PATH}"
    }

    stages {
        stage('1-Clone') {
            steps {
                git credentialsId: 'GitHUB-CREDENTIALS', url: 'https://github.com/DevopStan/maven-web-application'
            }
        }

        stage('2-mavenBuild') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('3-CodeQuality') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }
    }
}


